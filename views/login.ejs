<% include partials/header %>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><i class="mdi mdi-login-variant"></i> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %> 
    <% if (successMessage.length > 0) { %>
        <div class="alert alert-success"><%= successMessage %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post" data-toggle="validator" role="form">
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email" data-error="The email address is invalid." required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" data-error="Password is required." required>
            <div class="help-block with-errors"></div>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>

    <hr>

    <p>Need an account? <a href="/register">Register</a></p>
    <p>Forgot your password? <a href="/password">Reset Password</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>

<% include partials/footer %>
